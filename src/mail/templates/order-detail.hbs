<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
  </head>
  <style>

  </style>
  <body>
    <h1>Order details</h1>
    <table
      style='font-family: Arial, Helvetica, sans-serif; border-collapse: collapse; width: 100%;'
    >
      <thead>
        <tr>
          <th
            style='border: 1px solid #ddd; padding: 8px; padding-top: 12px; padding-bottom: 12px; text-align: left; background-color: #04AA6D; color: white;'
          >Product</th>
          <th
            style='border: 1px solid #ddd; padding: 8px; padding-top: 12px; padding-bottom: 12px; text-align: left; background-color: #04AA6D; color: white;'
          >Quantity</th>
          <th
            style='border: 1px solid #ddd; padding: 8px; padding-top: 12px; padding-bottom: 12px; text-align: left; background-color: #04AA6D; color: white;'
          >Price</th>
          <th
            style='border: 1px solid #ddd; padding: 8px; padding-top: 12px; padding-bottom: 12px; text-align: left; background-color: #04AA6D; color: white;'
          >Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each order.orderDetail}}
          <tr>
            <td
              style='border: 1px solid #ddd; padding: 8px;'
            >{{this.productName}}</td>
            <td
              style='border: 1px solid #ddd; padding: 8px;'
            >{{this.quantity}}</td>
            <td
              style='border: 1px solid #ddd; padding: 8px;'
            >{{this.money}}</td>
            <td style='border: 1px solid #ddd; padding: 8px;'>{{multiply
                (parseInt this.money)
                this.quantity
              }}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>